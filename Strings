#Lo anterior sirve para utilizar acentos en los strings

texto1 = 'hola ":)"' #Creamos la variable 1 usando comiallas simples y agregando comillas dobles al mensaje a mostrarlo
texto2 = "hola ':)'" #Creamos la variable 2 usando comiallas dobles y agregando comillas simples al mensaje a mostrarlo
print (texto1) #Mostramos la variable 1
print (texto2) #Mostramos la variable 2

#CONCATENAR STRINGS

tex1 = 'ho'# Creamos la variable 1 con una parte del mensaje
tex2 = 'la'# Creamos la varieble 2 con otra parte del mensaje 
tex3 = ':)'#Creamos la variable 3 con la ultima parte del mensaje
mensaje = tex1 + tex2 + " " + tex3#Creamos una ultima variable que almacenara el mensaje 
print (mensaje)#Mostramos el mensaje

#METODOS PARA DAR FORMATO A LOS TEXTOS DE LOS STRINGS

#title
nombre = 'daniel alejandro santillán ochoa'#Creamos la variable nombre
#nombre = nombre.title()#A la variable le cambiamos las primeras letras de cada palabra a mayusculas  
print (nombre.title())#Mostramos la variable y cambiamos a mayusculas las primeras letras de cada palabra

#upper
print (nombre.upper())#Mostramos la variable y cambiamos a mayusculas todas letras del string

#lower
nombre1 = 'DANIEL ALEJANDRO SANTILÁN OCHOA'#Creamos la variable nombre
print (nombre1.lower())#Mostramos la variable y cambiamos a minusculas todas letras del string

#SALTOS DE LINEA Y TABULACIONES

print("\tDaniel\n\tAlejandro\n\tSantillán\n\tOhoa")#Utilizamos "\n" para hacer un salto de linea y "\t" para tabular
