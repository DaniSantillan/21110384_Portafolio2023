frase = 'Lo que escribas lo repito\n'
frase += 'Indtroduce "s" para finalizar el programa\n'#Con un perador de asignacion "+=" le asignamos otro valor a la variable

mensaje = ''#Creamos la variable de tipo string
while mensaje != 's':#Creamos un ciclo while y mientras la varible sea diferente de salir, el bucle se repite
    mensaje = input(frase)#Guardamos los datos del usuario en la variable
    print(mensaje)#Mostramos el mensaje

x = 0#Creamos una variable 
while x < 10:#Creamos un ciclo while y mientras la varible sea menor o igual a 10, el bucle se repite
        x += 1#Sumamos uno a la variable x
        if x == 8:#Hacemos una condicion if
             break#Si la condicion se cumple detenemos el bucle
        if x == 3 or x == 6:#Hacemos una condicion if
          continue#Si la condicion se cumple se reinicia el bucle
        print(x)#Mostramos el valor de x
